_package deco
$

_pragma(classify_level=restricted, topic={jar_decompiler})
## Node for whatever was declared in the file.
def_slotted_exemplar(:dcn_file,
		      {			      
			      {:statements, _unset, :readable}
		      },
		      :dcn_base)
$

_pragma(classify_level=restricted, topic={jar_decompiler})
_method dcn_file.new()
	_return _clone.init( )
_endmethod
$

_pragma(classify_level=restricted, topic={jar_decompiler})
_method dcn_file.init()
	##
	.statements << rope.new()
	>> _self 
_endmethod
$

_pragma(classify_level=restricted, topic={jar_decompiler})
_method dcn_file.add_statement(p_statement)
	## 
	.statements.add(p_statement)
_endmethod
$
