_package user
$

def_slotted_exemplar(:deco_test,{})
$

_method deco_test.test_loop()
	##
	_loop
		_self.use()
	_endloop 
_endmethod
$

_method deco_test.test_loop_leave()
	##
	_loop
		_self.use()
		_if _self.test? _then _leave _endif 
		_self.dont_use()
	_endloop 
_endmethod
$

_method deco_test.test_loop_continue()
	##
	_loop
		_self.use()
		_if _self.test? _then _continue _endif 
		_self.dont_use()
	_endloop 
_endmethod
$

_method deco_test.test_loop_leave_outer()
	##
	_loop @outer
		_self.pre()
		_loop
			_self.use()
			_if _self.test? _then _continue @outer _endif 
			_self.dont_use()
		_endloop
		_self.post()
	_endloop 
_endmethod
$
