_package user
$

def_slotted_exemplar(:deco_test,{})
$

_method deco_test.test_block()

	_local a << 1
	_self.use(a)
	_block
		_local a << 2
		_self.use(a)
	_endblock 
_endmethod
$

_method deco_test.test_leave_block()

	_local a << 1
	_block @outer
		_self.use(a)
		_if a > 10
		_then
			_self.do()
			_leave @outer
		_endif 
		_self.use(b)
	_endblock 
_endmethod
$

_method deco_test.test_leave_block1()

	_local a << 1
	_block @outer
		_block @inner
			_self.use(a)
			_if a > 10
			_then
				_self.do()
				_leave @outer
			_endif 
			_self.use(b)
		_endblock
		_self.do_do()
	_endblock 
_endmethod
$
