_package user
$

def_slotted_exemplar(:deco_test,{})
$

_method deco_test.test_loop_exit_condition()
	_local var << _loop
			      a << _self.use()
			      _if _self.test _then _leave _with a _endif
			      _self.use2()
		      _endloop
	_self.show(var)
_endmethod
$

_method deco_test.try()
	_try
		_self.do()
	_when error
		_self.error()
	_endtry 
_endmethod
$

_method deco_test.try_when_when()
	_try
		_self.do()
	_when warning
		_self.warning()
	_when error
		_self.error()
	_endtry 
_endmethod
$

_method deco_test.try_with_condition()
	_try _with c
		_self.do()
	_when error
		c.report_error()
		_self.error()
	_endtry 
_endmethod
$

_method deco_test.try_assign()
	_local a << _try
			    _self.do()
			    >> 1
		    _when error
			    _self.error()
			    >> 2
		    _endtry
	_self.use(a)
_endmethod
