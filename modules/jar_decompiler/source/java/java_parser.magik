_pragma(classify_level=restricted, topic={jar_decompiler})
_private _method java_parser.parse_module(_optional p_annotations)
	##
	_self.ensure_keyword("module")
	
	_local name_lex << _self.parse_class_name()
	_local parent   << _self.parse_inheritance()
	
	_self.ensure_separator("{")
