_pragma(classify_level=restricted, topic={jar_decompiler})
_private _method java_parser.get_token()
	## 
	## get a token, taking into account that sometimes a dash is in
	## the name and we have to accept that.
	
	_local name_lex << .scanner.get()
	_loop
		_local lex << .scanner.peek()
		_if lex.is_operator?("-")
		_then
			.scanner.get()
			lex << .scanner.get()
			name_lex.append(write_string("-", lex.value))
		_else
			_leave 
		_endif
	_endloop
	>> name_lex
_endmethod
